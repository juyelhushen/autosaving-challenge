{
  "info": {
    "name": "BlackRock Challenge API",
    "_postman_id": "blk-challenge-collection",
    "description": "Automated API tests for BlackRock Challenge",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [

    {
      "name": "Transactions - Parse",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/blackrock/challenge/v1/transactions:parse",
          "host": ["{{baseUrl}}"],
          "path": ["blackrock", "challenge", "v1", "transactions:parse"]
        },
        "body": {
          "mode": "raw",
          "raw": "[{\"date\":\"2023-10-12T20:15:00\",\"amount\":1519}]"
        }
      }
    },

    {
      "name": "Transactions - Validator",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/blackrock/challenge/v1/transactions:validator",
          "host": ["{{baseUrl}}"],
          "path": ["blackrock", "challenge", "v1", "transactions:validator"]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"wage\": 50000, \"transactions\": [{\"date\":\"2023-10-12T20:15:00\",\"amount\":250,\"ceiling\":300,\"remanent\":50}]}"
        }
      }
    },

    {
      "name": "Transactions - Filter",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
