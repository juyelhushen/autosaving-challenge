          "host": ["{{baseUrl}}"],
          "path": ["blackrock", "challenge", "v1", "returns:nps"]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"age\": 29, \"wage\": 50000, \"inflation\": 0.055, \"transactions\": [{\"date\":\"2023-10-12T20:15:00\",\"amount\":250,\"ceiling\":300,\"remanent\":50}], \"kPeriods\": [{\"start\":\"2023-01-01T00:00:00\",\"end\":\"2023-12-31T23:59:59\"}]}"
        }
      }
    },

    {
      "name": "Returns - Index Fund",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
