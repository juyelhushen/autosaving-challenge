          "path": ["blackrock", "challenge", "v1", "transactions:filter"]
        },
        "body": {
          "mode": "raw",
          "raw": "{ \"transactions\": [{\"date\":\"2023-07-10T10:00:00\",\"amount\":620,\"ceiling\":700,\"remanent\":80}], \"qPeriods\": [{\"fixed\":0,\"start\":\"2023-07-01T00:00:00\",\"end\":\"2023-07-31T23:59:59\"}], \"pPeriods\": [{\"extra\":25,\"start\":\"2023-07-01T00:00:00\",\"end\":\"2023-12-31T23:59:59\"}]}"
        }
      }
    },

    {
      "name": "Returns - NPS",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
